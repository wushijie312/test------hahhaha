$(function(){
    // 手工合单 系统驳回单 tab 切换
	

	  // 商品列表展开
        $(document).on("click", ".goods_two_cityData", function () {
            var len = $(this).index();
            //$(this).parent(".goods_two").siblings(".goods_two").children(".goods_two_allRequest").removeClass("gshow");
            $(this).parent(".goods_two").siblings(".goods_two").children(".goods_two_cityData").find(".goods_two_numberLength").addClass("gshowIn");

            var Gclass = $(this).next(".goods_two_allRequest")[0].className;

            if (Gclass.indexOf("gshow") == -1) {
                $(this).next(".goods_two_allRequest").addClass("gshow");
               // $(this).find(".goods_two_numberLength").removeClass("gshowIn");
                $(this).find(".goods_two_city_btn").addClass("gshowImg");
            } else {
                $(this).next(".goods_two_allRequest").removeClass("gshow");
                //$(this).find(".goods_two_numberLength").addClass("gshowIn");
                $(this).find(".goods_two_city_btn").removeClass("gshowImg");
            }

        });
        // 点击城市选择框时，阻止事件传播
        //$(".goods_city_input").click(function(e){
        $(document).on("click", ".goods_city_input", function (e) {
            e.stopPropagation();
        });
	// 点击时隐藏弹框
	$(".t_two_cancel,.t_two_sure").click(function(){
		$(".t_bg").removeClass("gshow");
	});
	//$(".goods_thr_totalBtn").click(function(){
	//	$(".t_bg").addClass("gshow");
	//});

	// 申请单显示隐藏
	 $(document).on("click", ".goods_two_requestPeople a", function() {
            var Gs = $(this).parents(".goods_two_request").next(".goods_two_tab_box")[0].className;
            if (Gs.indexOf("gshow") == -1) {
                $(this).parents(".goods_two_request").next(".goods_two_tab_box").addClass("gshow");
                $(this).html("收起");
            } else {
                $(this).parents(".goods_two_request").next(".goods_two_tab_box").removeClass("gshow");
                $(this).html("展开");
            }
        });
 	//弹框隐藏
         $(".t_two_cancel ,.t_close").click(function () {
             $(".t_bg").hide();
         })
        //help
	$(".help_click").click(function(){
		$(".t_bg_help").addClass("gshow");
	});
	$(".t_close_help").click(function(){
		$(".t_bg_help").removeClass("gshow");
	});
	$(".t_two_cancel_help,.t_two_sure_help").click(function(){
		$(".t_bg_help").removeClass("gshow");
	});
	
	$(".help_click,.t_box_help,.goods_thr_totalBtn,.t_box,.single_two_look").click(function(e){
            // e.stopPropagation();
            return false;
	});
	$(document).click(function (e) {
       $(".t_bg_help,.t_bg,.number_fixed_bg").removeClass("gshow");
    });
    // 点击时隐藏弹框
	$(".t_two_cancel,.t_two_sure").click(function(){
		$(".number_fixed_bg").removeClass("gshow");
	});
	$(".goods_thr_totalBtn").click(function(){
		$(".number_fixed_bg").addClass("gshow");
	});
	// 弹框 close
	$(".t_close").click(function(){
		$(".number_fixed_bg").removeClass("gshow");
	});
});
 //弹出规则帮助
    var RuleHelp = function (id) {

        var url = '/MaterielApply/RuleIndex';
        var index = layer.open({
            skin: '.layui-layer-title',
            type: 2,
            title: '合单规则',
            closeBtn: 2,
            shadeClose: false,
            shade: 0.8,
            area: ["950px", "720px"],
            content: [url, 'no'],
            end: function () {
                location.reload();
            }
        });
    }
  //操作日志
    function OperatorLog(obj) {
      var DataId= $(obj).parent().attr("ID");
      var productcode= $(obj).parent().attr("ProductCode")
        var url = '/MaterielApply/OperatorLogIndex?DataId=' + DataId + "&productcode=" + productcode;
            var index = layer.open({
                skin: '.layui-layer-title',
                type: 2,
                title: '修改记录',
                closeBtn: 2,
                shadeClose: false,
                shade: 0.8,
                area: ["900px", "640px"],
                content: [url],
                end: function () {
                    //location.reload();
                }
            });
        }